[gd_resource type="Shader" format=2]

[resource]

code = "shader_type canvas_item;

uniform vec4 skin_color: hint_color = vec4(1, 1, 1, 1);
uniform sampler2D skin_mask: hint_black;

void fragment() {
	vec4 col = texture(TEXTURE, UV).rgba;
	vec4 mask = texture(skin_mask, UV).rgba;
	
	if (mask.a > 0.1 && mask.r > 0.1) {
		col.rgb = col.rgb * skin_color.rgb;
	}
	
	COLOR = col;
}
"

